{% use 'bootstrap_5_layout.html.twig' %}


{# ###> PASSWORD VISIBILITY ###}

{%- block password_widget -%}
	{%- set type = type|default('password') -%}
    
	<div
		{{ stimulus_controller('password-visibility') }}
		class="position-relative"
	>
		<input name={{ full_name }} class="form-control" type="{{ type }}" data-password-visibility-target="input" spellcheck="false" />

		<button
			tabindex="-1"
			style="width: 30px;"
			class="position-absolute end-0 top-0 h-100 bg-transparent border-0"
			type="button"
			data-action="password-visibility#toggle"
		>
		   
			<span
				data-password-visibility-target="icon"
				class=""
			>
				{{ component('gs_sprite', { id: 'eye' }) }}
			</span>
			
			<span
				data-password-visibility-target="icon"
				class="hidden"
			>
				{{ component('gs_sprite', { id: 'eye-close' }) }}
			</span>
		
		</button>
	</div>
{%- endblock password_widget -%}

{# ###< PASSWORD VISIBILITY ###}


